{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mspOfferName": {
            "type": "string",
            "defaultValue": "DNX Solutions Managed Azure Services",
            "metadata": {
                "description": "The name of your Managed Service Offer."
            }
        },
        "mspOfferDescription": {
            "type": "string",
            "defaultValue": "Delegated administration for proactive management, security, and optimization of Azure resources by DNX Solutions.",
            "metadata": {
                "description": "A description of your offer and the services provided."
            }
        },
        "managedByTenantId": {
            "type": "string",
            "defaultValue": "60c1e496-337d-46fb-b3e6-c697d4f142c7",
            "metadata": {
                "description": "The Microsoft Entra tenant ID of your MSP."
            }
        },
        "authorizations": {
            "type": "array",
            "defaultValue": [
                {
                    "principalId": "c05ef059-ed22-4c0b-bc58-8f35a24f5612",
                    "principalIdDisplayName": "DNX Lighthouse Administrators",
                    "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c"
                },
                {
                    "principalId": "36142517-1fc6-4619-b180-8f101c50cbab",
                    "principalIdDisplayName": "DNX Lighthouse Readers",
                    "roleDefinitionId": "acdd72a7-3385-48ef-bd42-f606fba81ae7"
                },
                {
                    "principalId": "36142517-1fc6-4619-b180-8f101c50cbab",
                    "principalIdDisplayName": "DNX Lighthouse Readers (Cost & Monitoring )",
                    "roleDefinitionId": "43d0d8ad-25c7-4714-9337-8ba259a9fe05"
                },
                {
                    "principalId": "0cdd5df6-f802-4953-9b2f-05691ff395ae",
                    "principalIdDisplayName": "DNX Lighthouse Security Applications",
                    "roleDefinitionId": "fb1c8493-542b-48eb-b624-b4c8fea62acd"
                }
            ],
            "metadata": {
                "description": "An array of objects defining the permissions (roles) your groups will have on the customer's subscription."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.ManagedServices/registrationDefinitions",
            "apiVersion": "2022-10-01",
            "name": "[guid(parameters('mspOfferName'))]",
            "properties": {
                "registrationDefinitionName": "[parameters('mspOfferName')]",
                "description": "[parameters('mspOfferDescription')]",
                "managedByTenantId": "[parameters('managedByTenantId')]",
                "authorizations": "[parameters('authorizations')]"
            }
        }
    ]
}
